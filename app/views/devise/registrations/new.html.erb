<%= render "shared/second-header"%>

<%# <body background="images/kim.png" marginwidth="0" marginheight="0"> %>
<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'registration-main', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class='form-wrap'>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :name, class:"input-default", id:"nickname", placeholder:"例) furima太郎", maxlength:"40" %>
  </div>

   <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password_confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>

   <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">生年月日</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birthday",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
    <p class='info-text'>※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。</p>
  </div>
    <div class="form-group">
      <div class='form-text-wrap'>
            性別
            <span class="indispensable">必須</span>
      </div>
      <div class="input-birth-wrap">
        <%= f.collection_select(:sex_id , Sex.all, :id, :name, {}, {class:"select-box", id:"sex"}) %> 
      </div>
    </div>
     <div class="form-group">
          <div class="form-text-wrap">
            <label class="form-text">身長</label>
            <span class="indispensable">必須</span>
          </div>
            
          <%= f.text_field  :height, class:"input-default", id:"item_price", placeholder:"例）175.5(cm)"%>
        
      </div>

      <div class="form-group">
          <div class="form-text-wrap">
            <label class="form-text">体重</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_field :weight, class:"input-default", id:"item_price", placeholder:"例）65.5(kg)" %>
      </div>
  <div class="form-group">
    <h2 class='form-bottom-text'>
      「会員登録」のボタンを押すことにより、
      <span>利用規約</span>
      <br>に同意したものとみなします
    </h2>
  </div>
    <div class="egister-btn">
       <%= f.submit "会員登録" ,class:"register-red-btn" %>
    </div>
  <% end %>
</div>

<%= render "shared/second-footer"%>
<%= render "devise/shared/links" %>
